<table class="table table-hover panel-table">
  <thead>
  <tr>
    <th></th>
    <th>编号</th>
    <th>用户名称</th>
    <th>单位名称</th>
    <th>登录IP</th>
    <th>最后登陆时间</th>
    <th>操作</th>
  </tr>
  </thead>
  <tbody>
  <% @company_owners.each do |company_owner| %>
      <tr>
        <td>
          <input type="checkbox">
        </td>
        <td><%= company_owner.id %></td>
        <td><%= company_owner.nickname %></td>
        <td><%= link_to company_owner.company.name, company_path(company_owner.company) %></td>
        <td><%= company_owner.account.last_sign_in_ip %></td>
        <td><%= company_owner.account.last_sign_in_at %></td>
        <td>
          <%= link_to '冻结', inactivate_company_path(company_owner.company), :method => :patch %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="panel-footer">
  <%= paginate @company_owners %>
</div>

