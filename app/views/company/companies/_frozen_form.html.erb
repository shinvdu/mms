<table class="table table-hover panel-table">
  <thead>
  <tr>
    <th></th>
    <th>编号</th>
    <th>用户名称</th>
    <th>登录IP</th>
    <th>最后登陆时间</th>
    <th>操作</th>
  </tr>
  </thead>
  <tbody>
  <% @company_frozen.each do |frozen_member| %>
      <tr>
        <td>
          <input type="checkbox">
        </td>
        <td><%= frozen_member.id %></td>
        <td><%= link_to frozen_member.nickname, frozen_member %></td>
        <td><%= frozen_member.account.last_sign_in_ip %></td>
        <td><%= frozen_member.account.last_sign_in_at %></td>
        <td>
          <%= link_to '解冻', activate_company_member_path(@company, frozen_member), :method => :patch %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="panel-footer">
  <%= paginate @company_members %>
</div>

