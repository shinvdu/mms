          <div class="panel is-current">
            <div class="panel-header clearfix">
              <div class="l-right"><a href="/" class="link-button-success">返回首页</a></div>
            </div>
            <div class="panel-content">
             <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= devise_error_messages! %>
                <%= f.hidden_field :reset_password_token %>
                <div class="row">
                  <div class="cols large-6 offset-by-2">
                    <div class="row">
                      <div class="cols large-4 l-text-right">
                        <label for="new-password">新密码:</label>
                      </div>
                      <div class="cols large-8">
                      <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
                      </div>
                    </div>
                    <div class="row">
                      <div class="cols large-4 l-text-right">
                        <label for="new-password-confirm">再次输入密码:</label>
                      </div>
                      <div class="cols large-8">
                    <%= f.password_field :password_confirmation, autocomplete: "off", :id => 'new-password-confirm' %>
                      </div>
                    </div>
                    <div class="row form-submit">
                      <div class="cols large-8 offset-by-4">
                        <button type="submit" class="btn-success">保存</button><a href="index.html" class="link-button-cancel">取消</a>
                      </div>
                    </div>
                  </div>
                </div>
                    <% end %>
            </div>
          </div>
