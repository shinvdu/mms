<div class="panel is-current">
  <div class="panel-header clearfix">
    <div class="l-right">已有账号？
      <%- if controller_name != 'sessions' %>
      <%= link_to "直接登录", new_session_path(resource_name), :class => 'link-button-success' %><br />
      <% end -%>
    </div>
  </div>
  <div class="panel-content">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
      <div class="row">
        <div class="cols large-6 offset-by-2">
          <div class="row">
            <div class="cols large-4 l-text-right">
              <label for="user-email">邮箱:</label>
            </div>
            <div class="cols large-8">
              <%= f.email_field :email, autofocus: true %>
            </div>
          </div>
          <div class="row">
            <div class="cols large-4 l-text-right">
              <label for="user-password">密码:</label>
            </div>
            <div class="cols large-8">
              <%= f.password_field :password, autocomplete: "off" %>
              <% if @validatable %>
              <em>(最少<%= @minimum_password_length %>个字符)</em>
              <% end %><br />

            </div>
          </div>
          <div class="row">
            <div class="cols large-4 l-text-right">
              <label for="user-password-confirm">再次输入密码:</label>
            </div>
            <div class="cols large-8">
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>
          </div>
          <div class="row">
            <div class="cols large-4 l-text-right">
              <label for="user-nickname">用户名:</label>
            </div>
            <div class="cols large-8">
            <%= f.text_field :username %></p>
            </div>
          </div>
          <div class="row form-submit">
            <div class="cols large-8 offset-by-4">
              <button type="submit" class="btn-success">注册</button><a href="/" class="link-button-cancel">取消</a>
            </div>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>
