<%= render 'user_videos/nav' %>
<div id="video-list" class="tab-panel current">
  <div class="panel-header">
    <form>
      <div class="right-inner-addon">
        <input type="search" placeholder="视频名称"><i class="fa fa-search"></i>
      </div>
      <div>
        <input type="text" placeholder="2015/05/01">
      </div>至
      <div>
        <input type="text" placeholder="2015/05/01">
      </div>
      <div>
        <select>
          <option>全部状态1
          </option>
          <option>全部状态2
          </option>
          <option>全部状态3
          </option>
        </select>
      </div>
    </form>
    <button class="btn-green">上传文件</button>
  </div>
  <div class="panel-content">
    <% @video_product_groups.each do |g| %>    
    <div class="video-list-item">
      <label>
        <input type="checkbox">
        <div class="video-abstract">
          <% if g.CREATED? %>
          <%= image_tag '', :class => 'img-rounded', :alt => '等待剪辑' %>
          <% elsif g.snapshots.present? %>
          <%= image_tag g.snapshots.first.get_full_url, :class => 'img-rounded', :alt => '截图制作中' %>
          <% else %>
          <%= image_tag '', :class => 'img-rounded', :alt => '截图制作中' %>
          <% end %>
        </div>
        <div class="video-details">
          <div class="dl-table-display">
            <dl>
              <dt>名称:</dt>
              <dd><%= g.name %></dd>
            </dl>
            <dl>
              <dt>状态:</dt>
              <dd><%= g.status_str %></dd>
            </dl>
            <dl>
              <dt>TAG:</dt>
              <dd>TAG1</dd>
            </dl>
            <dl>
              <dt>播放次数:</dt>
              <dd>123次</dd>
            </dl>
            <dl>
              <dt>拥有者:</dt>
              <dd><%= g.owner.nickname %></dd>
            </dl>
            <dl>
              <dt>ID:</dt>
              <dd><%= g.show_id %></dd>
            </dl>
            <dl>
              <dt>播放器方案:</dt>
              <dd><%= g.player ? g.player.name :  '系统默认' %></dd>
            </dl>
            <dl>
              <dt>广告方案:</dt>
              <dd>12345123</dd>
            </dl>
            <dl>
              <dt>创建时间:</dt>
              <dd><%= g.created_at.strftime("%Y-%m-%d %H:%M") %></dd>
            </dl>
            <dl>
              <dt>时长:</dt>
              <dd><%= g.duration_str %></dd>
            </dl>
          </div>
          <% if g.CREATED? %>
          <% if g.user_video.GOT_LOW_RATE? %>
          <%= link_to '剪辑', clip_existed_video_product_group_user_video_path(g), :class => 'btn btn-blue' %>
          <% end %>
          <% else %>
          <button class="btn btn-blue">编辑</button>
          <button class="btn btn-blue">代码</button>
          <% end %>
          <button class="btn-gray">删除</button>
        </div>
      </label>
    </div>
    <% end %>
  </div>
</div>
