<%= render 'admin/nav' %>

<div>
  <% VideoProductGroup.need_check.each do |g| %>
      uesr: <%= g.owner.nickname %><br/>
      video product: <%= g.name %><br/>
      status: <%= g.check_status %><br/>
      <%= form_for g, :url => video_product_group_check_status_path(g) do |f| %>
          <%= f.button :accept, :name => :check_result, :value => VideoProductGroup::CHECK_STATUS::ACCEPTED %>
          <%= f.button :reject, :name => :check_result, :value => VideoProductGroup::CHECK_STATUS::REJECT %>
          <%= f.button :pend, :name => :check_result, :value => VideoProductGroup::CHECK_STATUS::PENDING %>
      <% end %>
      <table>
        <tr>
          <% g.snapshots.each do |snapshot| %>
              <td>
                <% if snapshot.FINISHED? %>
                    <%= image_tag snapshot.get_full_url, :style => "width:180px;" %>
                <% else %>
                    截图制作中
                <% end %>
              </td>
          <% end %>
        </tr>
        <tr>
          <% g.snapshots.each do |snapshot| %>
              <td>
                <%= snapshot.time.to_time %>
              </td>
          <% end %>
        </tr>
      </table>
      <br/>
  <% end %>
</div>

