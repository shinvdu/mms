<%=  render 'players/nav' %>
<div class="tab-panel current container" id="add-player">
  <div class="panel-header clearfix">
    <a type="button" class="btn btn-green" href="<%= new_logo_path  %> "  data-no-turbolink='true' >添加logo</a>
  </div>
  <table class="table table-hover panel-table ">
    <thead>
      <tr>
        <th>名称</th>
        <th>LOGO</th>
        <th>用户</th>
        <th>创建时间</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @logos.each do |logo|  %>
      <tr>
        <td><%= logo.name %></td>
        <td><%= image_tag(logo.uri_url(:normal)) if logo.uri? %></td>
        <td><%= logo.user && logo.user.nickname %></td>
        <td><%=  logo.created_at && logo.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        <td>
          <%= link_to '预览', logo_path(logo) %>
          <%= link_to '修改', edit_logo_path(logo),  'data-no-turbolink' => true  %>
          <%= link_to '删除', logo, method: :delete, data: { confirm: '你确定要删除?' } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="panel-footer">
    <%=  paginate @logos %>
  </div>
</div>
