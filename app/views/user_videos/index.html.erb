<%= render 'user_videos/nav' %>
<div class="tab-panel current" id="video-list">
  <table class="table table-hover panel-table">
    <thead>
    <tr>
      <th>视频名称</th>
      <th>视频分类</th>
      <th>转码方案</th>
      <th>文件大小</th>
      <th>上传时间</th>
      <th>状态</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
    <% @user_videos.each do |user_video| %>
        <tr>
          <td><%= link_to user_video.video_name, user_video_path(user_video) %></td>
          <td>
            <select class="form-control">
              <option>分类1</option>
              <option>分类2</option>
              <option>分类3</option>
            </select>
          </td>
          <td>
            <select class="form-control">
              <option><%=  user_video.default_transcoding_strategy && user_video.default_transcoding_strategy.name %></option>
            </select>
          </td>
          <td><%= format_file_size(user_video.original_video.size)  %></td>
          <td><%= user_video.created_at  %></td>
          <td>完成</td>
          <td>
            <a href="<%= user_video_path(user_video) %>">查看</a>
            <a href="<%= edit_user_video_path(user_video) %>">编辑</a>
          <%= link_to '删除', user_video, method: :delete, data: { confirm: '你确定要删除?' } %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <div class="panel-footer">
    <%= paginate @user_videos %>
    <button type="button" class="btn btn-purple">选择文件</button>
    <button type="button" class="btn btn-green">上传文件</button>
  </div>
</div>