<%= render 'user_videos/nav' %>
<div class="tab-panel current" id="video-transcoding-template">
  <div class="panel-links">
    <%= link_to '&lt;&lt; 返回视频列表'.html_safe, '/video_product_groups', :class => 'btn-return-link' %> 
  </div>

  <div class="form-group clearfix">
    <label class="col-md-5 control-label text-center">上传新视频</label>
  </div>

<script type="text/javascript">
  jQuery(document).ready(function($) {
    $('#user_video_publish_strategy').on('change', function (e) {
      var optionSelected = $("option:selected", this);
      var valueSelected = this.value;
      switch(valueSelected)
      {
        case '1':
        $("#user_video_default_transcoding_strategy").val('');
        $("#user_video_default_transcoding_strategy_item").hide();
        break;
        default:
        $("#user_video_default_transcoding_strategy_item").show();
      }
    });
  });

</script>

  <%= form_for :user_video, :html => {:multipart => true, class: "form-horizontal"}, :url => user_videos_path(:user_video, :format => :html) do |f| %>
  <div class="form-group">
    <%= f.label :视频名称,  :class => "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :video_name ,  class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :视频文件,  :class => "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.file_field :video,  class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :发布方案,  :class => "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.select :publish_strategy, @publish_strategy, {}, {:class => 'form-control' } %>
    </div>
  </div>

  <div class="form-group" id="user_video_default_transcoding_strategy_item">
    <%= f.label :转码方案,  :class => "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.collection_select :default_transcoding_strategy, TranscodingStrategy.visiable(current_user), :id, :name, {}, {:class => 'form-control' } %>
    </div>
  </div>
  <hr>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit '上传', :class => 'btn btn-info text-center' %>
    </div>
  </div>                    
  <% end %>

</div>