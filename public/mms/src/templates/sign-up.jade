extends includes/master-page

append content
  .panel.is-current
    .panel-header.clearfix
      .l-right
        | 已有账号？
        a.link-button-success(href='sign-in.html') 直接登录
    .panel-content
      form
        .row
          .cols.large-6.offset-by-2
            .row
              .cols.large-4.l-text-right
                label(for='user-email') 邮箱:
              .cols.large-8
                input(type='email')#user-email
            .row
              .cols.large-4.l-text-right
                label(for='user-password') 密码:
              .cols.large-8
                input(type='password')#user-password
            .row
              .cols.large-4.l-text-right
                label(for='user-password-confirm') 再次输入密码:
              .cols.large-8
                input(type='password')#user-password-confirm
            .row
              .cols.large-4.l-text-right
                label(for='user-nickname') 昵称:
              .cols.large-8
                input(type='text')#user-nickname
            .row.form-submit
              .cols.large-8.offset-by-4
                button.btn-success(type='submit') 注册
                a.link-button-cancel(href='index.html') 取消
