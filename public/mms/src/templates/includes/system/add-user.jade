.panel#add-user
  .panel-header.clearfix
    a.l-right(href='?panel=manage-user') &lt;&lt; 返回
  .panel-content
    form
      .row
        .cols.large-10
          .row.form-title
            .cols.large-2.l-text-right
              | 增加用户
          .row
            .cols.large-2.l-text-right
              label(for='subuser-name') 名称:
            .cols.large-4
              input#subuser-name(type='text')
          .row
            .cols.large-2.l-text-right
              label(for='subuser-email') 邮箱:
            .cols.large-4
              input#subuser-email(type='email')
          .row
            .cols.large-2.l-text-right
              label(for='subuser-password') 密码:
            .cols.large-4
              input#subuser-password(type='password')
          .row
            .cols.large-10.offset-by-2
