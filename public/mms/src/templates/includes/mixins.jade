mixin u-a-i-list(items)
  ul&attributes(attributes)
    each item in items
      li(class=item.current)
        a(href=item.href)
          i(class='fa fa-fw fa-' + item.icon)
          = item.text

mixin u-a-list(items)
  ul&attributes(attributes)
    each item in items
      li
        a(href=item.href)
          = item.text

mixin select
  - var count = 1
  select&attributes(attributes)
    while count < 6
      option
        = '选项' + (count++)

