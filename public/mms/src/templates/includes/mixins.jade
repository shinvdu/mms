mixin clip-detail(name, tags, id)
  .clip-detail
    div
      .clip-name
        = name
      .clip-tags
        each tag in tags
          span
            = tag
      dl.clip-id
        dt ID:
        dd
          = id
      .clip-actions
        a(href='#') 编辑
        a(href='#') 删除
