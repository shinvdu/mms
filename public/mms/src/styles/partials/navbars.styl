.nav-primary
  background-color #fff
  border-radius 4px
  box-shadow 3px 3px 3px rgba(0, 0, 0, 0.21)

  input[type='search']
    width 11em

  > form
    font-size 14px
    margin-top 10px
    margin-right 15px

  > ul
    font-size 15px
    list-style none

    > li
      position relative
      float left

      > a
        position relative
        display block
        padding-right 1.5em
        padding-left 1.5em
        height 3.2em
        line-height 3.2em

        &:link,
        &:visited
          color color-text-dark

        &:after
          position absolute
          content ''
          top 100%
          left 50%
          display none
          margin-left -5px
          border-top 5px solid color-primary
          border-left 5px solid transparent
          border-right 5px solid transparent

        > i
          margin-right 5px
          color color-primary

      &:hover
        > a
          text-decoration underline
          color color-primary

        > .dropdown
          display block

      &.is-current
        > a
          background-color color-primary
          border-radius 0 0 4px 4px

          &:link,
          &:visited
            color #fff

          &:after
            display block

          > i
            color #fff

        &.no-dropdown
          > a
            &:after
              display none

        &:hover
          > a
            background-color color-primary-hover
            text-decoration underline

    .dropdown
      position absolute
      display none
      top 2.6em
      left 1.5em
      z-index 1000

      i
        position relative
        bottom 3px
        font-size 5px

      a
        &:link,
        &:visited,
        &:hover
          color color-text-intermediate

        &:hover
          background-color color-background

        &:active
          background-color color-primary
          color #fff

          > i
            color #fff

.nav-secondary
  margin-top 20px
  margin-left 20px

  > ul
    list-style none
    font-size 15px

    > li
      float left

      > a
        &:link,
        &:visited
          color color-text-intermediate

        &:hover,
        &:active
          color color-text-dark
          text-decoration underline

      i
        position relative
        bottom 2px
        margin-right 3px
        font-size 10px

      & + li
        margin-left 10px

      &.is-current
        > a
          color color-primary